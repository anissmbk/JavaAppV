<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<HBox prefHeight="582.0" prefWidth="891.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controler.ChatWindow">
    <children>
        <Pane prefHeight="543.0" prefWidth="102.0" style="-fx-background-color: #202225;">
            <children>
                <FontAwesomeIcon glyphStyle="-fx-fill:#BEBFC1" iconName="BARS" layoutX="34.0" layoutY="69.0" size="3em" />
            <TextField fx:id="userToInvite" layoutX="3.0" layoutY="132.0" prefHeight="25.0" prefWidth="96.0" />
            <Button layoutX="3.0" layoutY="167.0" mnemonicParsing="false" onAction="#sendInvitation" prefHeight="25.0" prefWidth="96.0" text="Send Invitation" />
            <Button layoutX="25.0" layoutY="452.0" mnemonicParsing="false" onAction="#testinvit" text="test invit" />
            <Button layoutX="24.0" layoutY="414.0" mnemonicParsing="false" onAction="#testmessage" text="test message" />
            <Button layoutX="25.0" layoutY="378.0" mnemonicParsing="false" onAction="#testfriends" text="test friends" />
            </children>
        </Pane>
        <Pane prefHeight="543.0" prefWidth="213.0" style="-fx-background-color: #36393f;">
            <children>
                <HBox alignment="CENTER_LEFT" layoutX="20.0" layoutY="39.0" style="-fx-background-color: #4a4d53; -fx-border-radius: 5px; -fx-background-radius: 5px;">
                    <children>
                        <TextField prefHeight="29.0" prefWidth="153.0" promptText="Search" style="-fx-background-color: #4a4d53;" />
                        <FontAwesomeIcon glyphStyle="-fx-fill:#BEBFC1" iconName="SEARCH" size="1.7em" />
                    </children>
                    <padding>
                        <Insets right="3.0" />
                    </padding>
                </HBox>
                <Line endX="89.0" layoutX="105.0" layoutY="86.0" startX="-100.0" stroke="#4a4d53" />
                <VBox id="vbox" fx:id="vboxOldMessages" layoutY="107.0" prefHeight="475.0" prefWidth="213.0" />
            </children>
        </Pane>
        <Pane prefHeight="656.0" prefWidth="380.0">
            <children>
                <TextArea fx:id="typeMessageText" editable="false" layoutX="2.0" layoutY="527.0" prefHeight="48.0" prefWidth="378.0" promptText="type your message here ...." />
                <FontAwesomeIcon fx:id="seneMessagebutton" iconName="SEND" layoutX="334.0" layoutY="555.0" onMouseClicked="#sendMessage" size="2em" />
                <TextFlow fx:id="messagesBoard" layoutX="2.0" prefHeight="527.0" prefWidth="378.0" />
            </children>
        </Pane>
        <Pane prefHeight="582.0" prefWidth="197.0" style="-fx-background-color: #2f3136;">
            <children>
                <Label layoutX="14.0" layoutY="54.0" text="Friends" textFill="WHITE">
                    <font>
                        <Font name="Verdana" size="18.0" />
                    </font>
                </Label>
                <VBox layoutX="1.0" layoutY="97.0" />
                <Line endX="82.5" layoutX="102.0" layoutY="85.0" startX="-92.0" stroke="#4a4d53" />
                <VBox fx:id="vboxFriendsConnected" layoutX="11.0" layoutY="95.0" prefHeight="485.0" prefWidth="175.0" />
            </children>
        </Pane>
    </children>
</HBox>
